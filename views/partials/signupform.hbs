{{#if error}}
<div class="callout alert" data-closable>
    <h5>Registration Error</h5>
    <p>{{error}}</p>
    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

<form action="/signup" method="post">
    <div class="input-group">
        <span class="input-group-label">
            <i class="fas fa-envelope"></i>
        </span>
        <input class="input-group-field" type="email" name="email" placeholder="Email" required>
    </div>

    <div class="input-group">
        <span class="input-group-label">
            <i class="fas fa-lock"></i>
        </span>
        <input class="input-group-field" type="password" name="pwd1" placeholder="Create password" required>
    </div>

    <div class="input-group">
        <span class="input-group-label">
            <i class="fas fa-lock"></i>
        </span>
        <input class="input-group-field" type="password" name="pwd2" placeholder="Confirm password" required>
    </div>

    <div class="input-group-button">
        <input type="submit" class="button" value="Submit">
    </div>
</form>